{
  "openapi": "3.1.0",
  "info": {
    "title": "Lattice Dashboard API",
    "version": "1.0.0",
    "description": "API for the Lattice dashboard to query service architecture data",
    "contact": {
      "name": "Lattice Team",
      "url": "https://lattice.dev"
    }
  },
  "servers": [
    {
      "url": "https://api.lattice.dev/v1",
      "description": "Production"
    },
    {
      "url": "http://localhost:3000/api/v1",
      "description": "Local development"
    }
  ],
  "paths": {
    "/services": {
      "get": {
        "summary": "List all services",
        "description": "Retrieve all discovered services with optional filtering",
        "operationId": "listServices",
        "tags": ["Services"],
        "parameters": [
          {
            "name": "status",
            "in": "query",
            "description": "Filter by service status",
            "schema": {
              "type": "string",
              "enum": ["active", "inactive", "unknown"]
            }
          },
          {
            "name": "environment",
            "in": "query",
            "description": "Filter by environment",
            "schema": {
              "type": "string",
              "enum": ["development", "staging", "production"]
            }
          },
          {
            "name": "framework",
            "in": "query",
            "description": "Filter by framework",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "limit",
            "in": "query",
            "description": "Maximum number of results",
            "schema": {
              "type": "integer",
              "default": 50,
              "maximum": 500
            }
          },
          {
            "name": "offset",
            "in": "query",
            "description": "Pagination offset",
            "schema": {
              "type": "integer",
              "default": 0
            }
          }
        ],
        "responses": {
          "200": {
            "description": "List of services",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "services": {
                      "type": "array",
                      "items": {
                        "$ref": "#/components/schemas/ServiceSummary"
                      }
                    },
                    "total": {
                      "type": "integer",
                      "example": 42
                    },
                    "limit": {
                      "type": "integer",
                      "example": 50
                    },
                    "offset": {
                      "type": "integer",
                      "example": 0
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/services/{serviceId}": {
      "get": {
        "summary": "Get service details",
        "description": "Retrieve complete details for a specific service",
        "operationId": "getService",
        "tags": ["Services"],
        "parameters": [
          {
            "name": "serviceId",
            "in": "path",
            "required": true,
            "description": "Service ID or name",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "include",
            "in": "query",
            "description": "Include related entities",
            "schema": {
              "type": "array",
              "items": {
                "type": "string",
                "enum": ["routes", "dependencies", "connections"]
              }
            },
            "style": "form",
            "explode": true
          }
        ],
        "responses": {
          "200": {
            "description": "Service details",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ServiceDetail"
                }
              }
            }
          },
          "404": {
            "description": "Service not found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/graph": {
      "get": {
        "summary": "Get service dependency graph",
        "description": "Retrieve the complete service architecture graph",
        "operationId": "getGraph",
        "tags": ["Graph"],
        "parameters": [
          {
            "name": "format",
            "in": "query",
            "description": "Graph format",
            "schema": {
              "type": "string",
              "enum": ["nodes-edges", "adjacency-list"],
              "default": "nodes-edges"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Service graph",
            "content": {
              "application/json": {
                "schema": {
                  "oneOf": [
                    {
                      "$ref": "#/components/schemas/NodesEdgesGraph"
                    },
                    {
                      "$ref": "#/components/schemas/AdjacencyListGraph"
                    }
                  ]
                }
              }
            }
          }
        }
      }
    },
    "/graph/dependencies/{serviceId}": {
      "get": {
        "summary": "Get service dependencies",
        "description": "Retrieve all downstream services that a service depends on",
        "operationId": "getServiceDependencies",
        "tags": ["Graph"],
        "parameters": [
          {
            "name": "serviceId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "depth",
            "in": "query",
            "description": "Traversal depth (0 = direct only)",
            "schema": {
              "type": "integer",
              "default": 10,
              "maximum": 20
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Dependency tree",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/DependencyTree"
                }
              }
            }
          }
        }
      }
    },
    "/graph/dependents/{serviceId}": {
      "get": {
        "summary": "Get service dependents",
        "description": "Retrieve all upstream services that depend on this service",
        "operationId": "getServiceDependents",
        "tags": ["Graph"],
        "parameters": [
          {
            "name": "serviceId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "depth",
            "in": "query",
            "description": "Traversal depth",
            "schema": {
              "type": "integer",
              "default": 10
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Dependent services",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/DependencyTree"
                }
              }
            }
          }
        }
      }
    },
    "/routes": {
      "get": {
        "summary": "Search routes",
        "description": "Search for routes across all services",
        "operationId": "searchRoutes",
        "tags": ["Routes"],
        "parameters": [
          {
            "name": "path",
            "in": "query",
            "description": "Filter by path pattern",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "method",
            "in": "query",
            "description": "Filter by HTTP method",
            "schema": {
              "type": "string",
              "enum": ["GET", "POST", "PUT", "PATCH", "DELETE"]
            }
          },
          {
            "name": "serviceId",
            "in": "query",
            "description": "Filter by service",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Matching routes",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "routes": {
                      "type": "array",
                      "items": {
                        "$ref": "#/components/schemas/RouteWithService"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/dependencies": {
      "get": {
        "summary": "List package dependencies",
        "description": "List all package dependencies across services",
        "operationId": "listDependencies",
        "tags": ["Dependencies"],
        "parameters": [
          {
            "name": "packageName",
            "in": "query",
            "description": "Filter by package name",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "hasVulnerabilities",
            "in": "query",
            "description": "Filter by vulnerability status",
            "schema": {
              "type": "boolean"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Dependency list",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "dependencies": {
                      "type": "array",
                      "items": {
                        "$ref": "#/components/schemas/DependencyWithService"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/metrics/stream": {
      "get": {
        "summary": "Real-time metrics stream",
        "description": "Server-Sent Events stream for live service metrics",
        "operationId": "metricsStream",
        "tags": ["Metrics"],
        "responses": {
          "200": {
            "description": "Event stream",
            "content": {
              "text/event-stream": {
                "schema": {
                  "type": "string",
                  "description": "SSE stream with JSON events"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "ServiceSummary": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "name": { "type": "string" },
          "status": { "type": "string", "enum": ["active", "inactive", "unknown"] },
          "framework": { "type": "string" },
          "routeCount": { "type": "integer" },
          "dependencyCount": { "type": "integer" },
          "outgoingConnectionCount": { "type": "integer" },
          "incomingConnectionCount": { "type": "integer" },
          "lastSeen": { "type": "string", "format": "date-time" }
        }
      },
      "ServiceDetail": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "name": { "type": "string" },
          "version": { "type": "string" },
          "language": { "type": "string" },
          "framework": { "type": "string" },
          "status": { "type": "string" },
          "routes": {
            "type": "array",
            "items": { "$ref": "#/components/schemas/Route" }
          },
          "dependencies": {
            "type": "array",
            "items": { "$ref": "#/components/schemas/Dependency" }
          },
          "outgoingConnections": {
            "type": "array",
            "items": { "$ref": "#/components/schemas/Connection" }
          }
        }
      },
      "Route": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "method": { "type": "string" },
          "path": { "type": "string" },
          "avgResponseTimeMs": { "type": "number" },
          "errorRate": { "type": "number" }
        }
      },
      "Dependency": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "packageName": { "type": "string" },
          "version": { "type": "string" },
          "installedSize": { "type": "integer" },
          "hasVulnerabilities": { "type": "boolean" }
        }
      },
      "Connection": {
        "type": "object",
        "properties": {
          "targetServiceId": { "type": "string" },
          "targetServiceName": { "type": "string" },
          "method": { "type": "string" },
          "path": { "type": "string" },
          "callCount": { "type": "integer" },
          "errorRate": { "type": "number" }
        }
      },
      "NodesEdgesGraph": {
        "type": "object",
        "properties": {
          "nodes": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "id": { "type": "string" },
                "name": { "type": "string" },
                "framework": { "type": "string" },
                "status": { "type": "string" }
              }
            }
          },
          "edges": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "source": { "type": "string" },
                "target": { "type": "string" },
                "callCount": { "type": "integer" }
              }
            }
          }
        }
      },
      "AdjacencyListGraph": {
        "type": "object",
        "additionalProperties": {
          "type": "array",
          "items": { "type": "string" }
        }
      },
      "DependencyTree": {
        "type": "object",
        "properties": {
          "serviceId": { "type": "string" },
          "serviceName": { "type": "string" },
          "dependencies": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/DependencyTree"
            }
          },
          "depth": { "type": "integer" }
        }
      },
      "RouteWithService": {
        "allOf": [
          { "$ref": "#/components/schemas/Route" },
          {
            "type": "object",
            "properties": {
              "serviceName": { "type": "string" },
              "serviceId": { "type": "string" }
            }
          }
        ]
      },
      "DependencyWithService": {
        "allOf": [
          { "$ref": "#/components/schemas/Dependency" },
          {
            "type": "object",
            "properties": {
              "serviceName": { "type": "string" },
              "serviceId": { "type": "string" }
            }
          }
        ]
      },
      "Error": {
        "type": "object",
        "properties": {
          "error": { "type": "string" },
          "message": { "type": "string" }
        }
      }
    }
  },
  "tags": [
    {
      "name": "Services",
      "description": "Service discovery and details"
    },
    {
      "name": "Graph",
      "description": "Service dependency graph operations"
    },
    {
      "name": "Routes",
      "description": "Route search and discovery"
    },
    {
      "name": "Dependencies",
      "description": "Package dependency management"
    },
    {
      "name": "Metrics",
      "description": "Real-time metrics and monitoring"
    }
  ]
}
