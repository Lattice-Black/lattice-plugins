{
  "name": "@lattice/monorepo",
  "version": "0.1.0",
  "private": true,
  "description": "Lattice - Service discovery and visualization platform",
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
