{
  "name": "@lattice/api",
  "version": "0.1.0",
  "description": "Lattice Collector API - Service metadata ingestion and query API",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src --ext .ts",
    "clean": "rm -rf dist",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio",
    "stripe:listen": "stripe listen --forward-to localhost:3000/api/v1/webhooks/stripe",
    "stripe:test:checkout": "stripe trigger checkout.session.completed",
    "stripe:test:subscription": "stripe trigger customer.subscription.updated",
    "stripe:test:payment": "stripe trigger invoice.payment_succeeded"
  },
  "dependencies": {
    "@lattice.black/core": "*",
    "@lattice.black/plugin-express": "*",
    "@prisma/client": "^5.7.0",
    "@supabase/supabase-js": "^2.75.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "pg": "^8.16.3",
    "redis": "^4.6.11",
    "stripe": "^19.1.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "@types/pg": "^8.15.5",
    "prisma": "^5.7.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  }
}
