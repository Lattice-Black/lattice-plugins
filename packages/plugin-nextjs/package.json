{
  "name": "@lattice.black/plugin-nextjs",
  "version": "0.2.0",
  "description": "Lattice service discovery plugin for Next.js applications",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "lattice-next": "./dist/cli.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "node": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "sideEffects": false,
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "postbuild": "chmod +x dist/cli.js"
  },
  "keywords": [
    "lattice",
    "service-discovery",
    "nextjs",
    "microservices",
    "api-discovery"
  ],
  "dependencies": {
    "@lattice.black/core": "*",
    "glob": "^10.3.10",
    "server-only": "^0.0.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0"
  },
  "peerDependencies": {
    "next": "^14.0.0 || ^13.0.0"
  },
  "files": [
    "dist",
    "README.md",
    "USER_GUIDE.md",
    "MIGRATION.md",
    "CHANGELOG.md"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Caryyon/lattice.git",
    "directory": "packages/plugin-nextjs"
  }
}
